<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="./vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
>
    <testsuites>
        <testsuite name="Unit">
            <directory suffix="Test.php">./tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory suffix="Test.php">./tests/Feature</directory>
        </testsuite>
        <testsuite name="Search">
            <directory suffix="Test.php">./tests/Feature/Search</directory>
        </testsuite>
         <testsuite name="Threads">
            <directory suffix="Test.php">./tests/Feature/Threads</directory>
        </testsuite>
         <testsuite name="Categories">
            <directory suffix="Test.php">./tests/Feature/Categories</directory>
        </testsuite>
         <testsuite name="Profiles">
            <directory suffix="Test.php">./tests/Feature/Profiles</directory>
        </testsuite>
         <testsuite name="Messages">
            <directory suffix="Test.php">./tests/Feature/Messages</directory>
        </testsuite>
         <testsuite name="Notifications">
            <directory suffix="Test.php">./tests/Feature/Notifications</directory>
        </testsuite>
         <testsuite name="ProfilePosts">
            <directory suffix="Test.php">./tests/Feature/ProfilePosts</directory>
        </testsuite>
         <testsuite name="ThreadReplies">
            <directory suffix="Test.php">./tests/Feature/ThreadReplies</directory>
        </testsuite>
         <testsuite name="Activities">
            <directory suffix="Test.php">./tests/Feature/Activities</directory>
        </testsuite>
         <testsuite name="Conversations">
            <directory suffix="Test.php">./tests/Feature/Conversations</directory>
        </testsuite>
         <testsuite name="ThreadSubscriptions">
            <directory suffix="Test.php">./tests/Feature/ThreadSubscriptions</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./app</directory>
        </whitelist>
    </filter>
    <php>
        <server name="APP_ENV" value="testing"/>
        <server name="BCRYPT_ROUNDS" value="4"/>
        <server name="CACHE_DRIVER" value="array"/>
        <server name="DB_CONNECTION" value="sqlite"/>
        <server name="DB_DATABASE" value=":memory:"/>
        <server name="MAIL_MAILER" value="array"/>
        <server name="QUEUE_CONNECTION" value="sync"/>
        <server name="SESSION_DRIVER" value="array"/>
        <server name="TELESCOPE_ENABLED" value="false"/>
        <server name="SCOUT_DRIVER" value="null"/>

    </php>
</phpunit>
